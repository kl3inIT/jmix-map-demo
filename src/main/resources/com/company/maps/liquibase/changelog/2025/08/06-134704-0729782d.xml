<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="maps">
        <addColumn tableName="LOCATION">
            <column name="COMMUNE" type="VARCHAR(255)"/>
            <column name="COORDINATES" type="varchar(100 BYTE)"/>
            <column name="DISTRICT" type="VARCHAR(255)"/>
            <column name="PROPERTY_COUNT" type="INT"/>
            <column name="PROVINCE" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="maps">
        <dropColumn columnName="ADDRESS" tableName="LOCATION"/>

        <dropColumn columnName="BUILDING" tableName="LOCATION"/>

        <dropColumn columnName="BUILDING_AREA" tableName="LOCATION"/>

        <dropColumn columnName="BUILDING_ENTRANCE" tableName="LOCATION"/>

        <dropColumn columnName="CITY" tableName="LOCATION"/>

        <dropColumn columnName="PATH_TO_BUILDING" tableName="LOCATION"/>

        <dropColumn columnName="TYPE_" tableName="LOCATION"/>
    </changeSet>
</databaseChangeLog>