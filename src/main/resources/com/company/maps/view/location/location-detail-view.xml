<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://locationDetailView.title"
      focusComponent="form">
    <data>
        <instance id="locationDc"
                  class="com.company.maps.entity.Location">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="locationDc">
            <textField id="provinceField" property="province"/>
            <textField id="districtField" property="district"/>
            <textField id="communeField" property="commune"/>
            <textField id="propertyCountField" property="propertyCount"/>
            <textField id="coordinatesField" property="coordinates" readOnly="true">
                <suffix>
                    <button id="editBuildingButton" themeNames="tertiary-inline" icon="vaadin:edit"
                            title="Edit"/>
                </suffix>
            </textField>
        </formLayout>
        <maps:geoMap id="map"
                     height="100%"
                     width="100%">
            <maps:mapView centerX="105.854444" centerY="21.026643" zoom="6">
                <maps:extent minX="102" minY="8" maxX="110" maxY="24"/>
            </maps:mapView>
            <maps:layers>
                <maps:tile>
                    <maps:osmSource/>
                </maps:tile>
                <maps:vector id="vectorLayer">
                    <maps:dataVectorSource id="dataVectorSource"
                                           dataContainer="locationDc"
                                           property="coordinates"/>
                </maps:vector>
            </maps:layers>
        </maps:geoMap>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
