<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://districtListView.title"
      focusComponent="districtsDataGrid">

    <data>
        <collection id="districtsDc"
                    class="com.company.maps.entity.District">
            <fetchPlan extends="_base"/>
            <loader id="districtsDl" readOnly="true">
                <query>
                    <![CDATA[select e from District e]]>
                </query>
            </loader>
        </collection>
        <instance id="districtDc" class="com.company.maps.entity.District"/>
    </data>

    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>

    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>

    <layout>
        <hbox width="100%" height="100%">
            <vbox height="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="districtsDataGrid.create"/>
                    <button id="editButton" action="districtsDataGrid.edit"/>
                    <button id="removeButton" action="districtsDataGrid.remove"/>
                    <simplePagination id="pagination" dataLoader="districtsDl"/>
                </hbox>

                <dataGrid id="districtsDataGrid"
                          width="100%"
                          height="100%"
                          minHeight="20em"
                          dataContainer="districtsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="create" type="list_create" actionVariant="DEFAULT"/>
                        <action id="edit" type="list_edit"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns>
                        <column property="name"/>
                        <column property="coordinates"/>
                        <column property="propertyCount"/>
                    </columns>
                </dataGrid>
            </vbox>

            <maps:geoMap id="map"
                         height="100%"
                         width="100%">
                <maps:mapView centerX="108" centerY="16" zoom="6"/>
                <maps:layers>
                    <maps:tile>
                        <maps:osmSource/>
                    </maps:tile>
                    <maps:vector id="districtLayer">
                        <maps:dataVectorSource id="districtVectorSource"
                                               dataContainer="districtsDc"
                                               property="coordinates"/>
                    </maps:vector>
                </maps:layers>
            </maps:geoMap>
        </hbox>

        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
